{
    "tasks": [
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "args": ["${input:whichMake}"],
            "options": {
                "cwd": "${workspaceFolder}/c_stuff/"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "make clean",
            "dependsOn": "clean",
            "command": "make",
            // "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/c_stuff/"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "make clean",
            // "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/c_stuff/"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "whichMake",
            "description": "make args",
            "options": [
                "all", 
                "sim",
                "libws",
                "bipsim",
                "clean"
            ]
            // "default": "all"

        }
    ],
    "version": "2.0.0"
}